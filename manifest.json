{
    "manifest_version": 3,
    "name": "Educational TOTP Extension",
    "version": "1.0",
    "description": "Demonstrates TOTP generation and autofill for educational purposes.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}